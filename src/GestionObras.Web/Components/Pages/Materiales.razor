<PageTitle>Materiales - Gesti贸n Obras</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-box-seam"></i> Gesti贸n de Materiales
        </h1>
        <button class="btn btn-primary" @onclick="AbrirModalNuevo">
            <i class="bi bi-plus-circle"></i> Nuevo Material
        </button>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" placeholder=" Buscar material..."
                           @bind="filtroNombre" @bind:event="oninput" />
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="filtroCategoria">
                        <option value="">Todas las categor铆as</option>
                        <option value="Estructural">Estructural</option>
                        <option value="Aislamiento">Aislamiento</option>
                        <option value="Acabados">Acabados</option>
                        <option value="Instalaciones">Instalaciones</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-secondary w-100" @onclick="LimpiarFiltros">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de materiales -->
    <div class="card">
        <div class="card-body">
            @if (cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2 text-muted">Cargando materiales...</p>
                </div>
            }
            else if (!materialesFiltrados.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No se encontraron materiales
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>C贸digo</th>
                                <th>Nombre</th>
                                <th>Categor铆a</th>
                                <th>Stock</th>
                                <th>Unidad</th>
                                <th>Precio</th>
                                <th>Proveedor</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var material in materialesFiltrados)
                            {
                                <tr>
                                    <td><code>@material.Codigo</code></td>
                                    <td><strong>@material.Nombre</strong></td>
                                    <td>
                                        <span class="badge bg-secondary">@material.Categoria</span>
                                    </td>
                                    <td>
                                        @if (material.StockDisponible <= material.StockMinimo)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-exclamation-triangle"></i> @material.StockDisponible
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@material.StockDisponible</span>
                                        }
                                    </td>
                                    <td>@material.UnidadMedida</td>
                                    <td>@material.PrecioUnitario.ToString("C2")</td>
                                    <td>
                                        @if (material.Proveedor != null)
                                        {
                                            <span class="text-muted">@material.Proveedor.Nombre</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Sin proveedor</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    @onclick="() => AbrirModalEditar(material)"
                                                    title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => ConfirmarEliminar(material)"
                                                    title="Eliminar">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal para crear/editar material -->
@if (mostrarModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @(materialSeleccionado.Id == 0 ? "Nuevo Material" : "Editar Material")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">C贸digo *</label>
                            <input class="form-control" @bind="materialSeleccionado.Codigo" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nombre *</label>
                            <input class="form-control" @bind="materialSeleccionado.Nombre" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Descripci贸n</label>
                            <textarea class="form-control" rows="2" @bind="materialSeleccionado.Descripcion"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Categor铆a *</label>
                            <select class="form-select" @bind="materialSeleccionado.Categoria">
                                <option value="">Seleccione...</option>
                                <option value="Estructural">Estructural</option>
                                <option value="Aislamiento">Aislamiento</option>
                                <option value="Acabados">Acabados</option>
                                <option value="Instalaciones">Instalaciones</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Unidad de Medida *</label>
                            <input class="form-control" @bind="materialSeleccionado.UnidadMedida" placeholder="m虏, kg, unid..." />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Precio Unitario *</label>
                            <input type="number" step="0.01" class="form-control" @bind="materialSeleccionado.PrecioUnitario" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Stock Disponible *</label>
                            <input type="number" step="0.01" class="form-control" @bind="materialSeleccionado.StockDisponible" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Stock M铆nimo *</label>
                            <input type="number" step="0.01" class="form-control" @bind="materialSeleccionado.StockMinimo" />
                        </div>
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <small>
                                    <i class="bi bi-info-circle"></i> 
                                    El proveedor se gestiona mediante relaciones de base de datos.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="GuardarMaterial">
                        <i class="bi bi-save2"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal de confirmaci贸n de eliminaci贸n -->
@if (mostrarModalEliminar)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar eliminaci贸n</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>驴Est谩 seguro de que desea eliminar el material?</p>
                    <p class="fw-bold">@materialAEliminar?.Nombre</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModalEliminar">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="EliminarMaterial">
                        <i class="bi bi-trash3-fill"></i> Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Material> materiales = new();
    private bool cargando = true;
    private bool mostrarModal = false;
    private bool mostrarModalEliminar = false;
    private Material materialSeleccionado = new();
    private Material? materialAEliminar;

    private string filtroNombre = "";
    private string filtroCategoria = "";

    private IEnumerable<Material> materialesFiltrados => materiales
        .Where(m => string.IsNullOrEmpty(filtroNombre) || 
                   m.Nombre.Contains(filtroNombre, StringComparison.OrdinalIgnoreCase) ||
                   m.Codigo.Contains(filtroNombre, StringComparison.OrdinalIgnoreCase))
        .Where(m => string.IsNullOrEmpty(filtroCategoria) || m.Categoria == filtroCategoria);

    protected override async Task OnInitializedAsync()
    {
        await CargarMateriales();
    }

    private async Task CargarMateriales()
    {
        cargando = true;
        try
        {
            materiales = await DbContext.Materiales
                .Include(m => m.Proveedor)
                .OrderBy(m => m.Nombre)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar materiales: {ex.Message}");
            materiales = new List<Material>();
        }
        finally
        {
            cargando = false;
        }
    }

    private void AbrirModalNuevo()
    {
        materialSeleccionado = new Material 
        { 
            StockDisponible = 0,
            StockMinimo = 100
        };
        mostrarModal = true;
        StateHasChanged();
    }

    private void AbrirModalEditar(Material material)
    {
        materialSeleccionado = new Material
        {
            Id = material.Id,
            Codigo = material.Codigo,
            Nombre = material.Nombre,
            Descripcion = material.Descripcion,
            Categoria = material.Categoria,
            UnidadMedida = material.UnidadMedida,
            PrecioUnitario = material.PrecioUnitario,
            StockDisponible = material.StockDisponible,
            StockMinimo = material.StockMinimo
        };
        mostrarModal = true;
        StateHasChanged();
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        materialSeleccionado = new();
    }

    private async Task GuardarMaterial()
    {
        try
        {
            if (materialSeleccionado.Id == 0)
            {
                // Nuevo material
                DbContext.Materiales.Add(materialSeleccionado);
            }
            else
            {
                // Editar material existente
                var material = await DbContext.Materiales.FindAsync(materialSeleccionado.Id);
                if (material != null)
                {
                    material.Codigo = materialSeleccionado.Codigo;
                    material.Nombre = materialSeleccionado.Nombre;
                    material.Descripcion = materialSeleccionado.Descripcion;
                    material.Categoria = materialSeleccionado.Categoria;
                    material.UnidadMedida = materialSeleccionado.UnidadMedida;
                    material.PrecioUnitario = materialSeleccionado.PrecioUnitario;
                    material.StockDisponible = materialSeleccionado.StockDisponible;
                    material.StockMinimo = materialSeleccionado.StockMinimo;
                    DbContext.Materiales.Update(material);
                }
            }
            
            await DbContext.SaveChangesAsync();
            await CargarMateriales();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al guardar material: {ex.Message}");
        }
        
        CerrarModal();
        StateHasChanged();
    }

    private void ConfirmarEliminar(Material material)
    {
        materialAEliminar = material;
        mostrarModalEliminar = true;
        StateHasChanged();
    }

    private void CerrarModalEliminar()
    {
        mostrarModalEliminar = false;
        materialAEliminar = null;
    }

    private async Task EliminarMaterial()
    {
        if (materialAEliminar != null)
        {
            try
            {
                var material = await DbContext.Materiales.FindAsync(materialAEliminar.Id);
                if (material != null)
                {
                    DbContext.Materiales.Remove(material);
                    await DbContext.SaveChangesAsync();
                    await CargarMateriales();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al eliminar material: {ex.Message}");
            }
        }
        CerrarModalEliminar();
        StateHasChanged();
    }

    private void LimpiarFiltros()
    {
        filtroNombre = "";
        filtroCategoria = "";
    }
}
