    private bool UsuarioEsAsignableEnSubtarea(IList<string> rolesEmpleado)
    {
        // Administrador puede asignar cualquier rol activo
        if (rolesUsuarioActual.Contains("Administrador"))
        {
            return true;
        }

        // JefeObra: OperarioObra + Operario legado + coordinaci√≥n horizontal con OficinaTecnica/JefeObra
        if (rolesUsuarioActual.Contains("JefeObra"))
        {
            return rolesEmpleado.Contains("OperarioObra") ||
                   rolesEmpleado.Contains("Operario") ||
                   rolesEmpleado.Contains("JefeObra") ||
                   rolesEmpleado.Contains("OficinaTecnica") ||
                   rolesEmpleado.Contains("Administrador");
        }

        // OficinaTecnica: OperarioOficinaT + Operario legado + coordinaci√≥n horizontal con JefeObra/OficinaTecnica
        if (rolesUsuarioActual.Contains("OficinaTecnica"))
        {
            return rolesEmpleado.Contains("OperarioOficinaT") ||
                   rolesEmpleado.Contains("Operario") ||
                   rolesEmpleado.Contains("OficinaTecnica") ||
                   rolesEmpleado.Contains("JefeObra") ||
                   rolesEmpleado.Contains("Administrador");
        }

        return true;
    }

    private bool UsuarioEstaAsignadoATarea(Tarea tarea, string? usuarioId)
    {
        if (string.IsNullOrWhiteSpace(usuarioId))
        {
            return false;
        }

        return tarea.UsuariosAsignados?.Any(u => u.Id == usuarioId) == true;
    }

    private bool TieneSubtareasNoFinalizadas(int tareaId)
    {
        return tareas.Any(t => t.TareaPadreId == tareaId && t.Estado != EstadoTarea.Finalizado);
    }

    private List<Tarea> ObtenerSubtareasDescendientes(int tareaId)
    {
        var resultado = new List<Tarea>();
        var pendientes = new Queue<int>();
        pendientes.Enqueue(tareaId);

        while (pendientes.Count > 0)
        {
            var actual = pendientes.Dequeue();
            var hijas = tareas.Where(t => t.TareaPadreId == actual).ToList();

            foreach (var hija in hijas)
            {
                resultado.Add(hija);
                pendientes.Enqueue(hija.Id);
            }
        }

        return resultado;
    }

    private Tarea? ObtenerTareaPadre(Tarea tarea)
    {
        if (tarea.TareaPadreId == null)
        {
            return null;
        }

        return tareas.FirstOrDefault(t => t.Id == tarea.TareaPadreId.Value);
    }

    private bool PuedeMoverSegunJerarquia(Tarea tarea, EstadoTarea nuevoEstado, out string mensaje)
    {
        mensaje = string.Empty;

        // Regla 0: Dependencias de predecesoras
        var quiereAvanzar = nuevoEstado == EstadoTarea.EnCurso || nuevoEstado == EstadoTarea.Finalizado;
        if (quiereAvanzar)
        {
            var predecesorasPendientes = tarea.Predecesoras
                .Where(p => p.Estado != EstadoTarea.Finalizado)
                .Select(p => p.Nombre)
                .ToList();

            if (predecesorasPendientes.Any())
            {
                mensaje = "No puedes avanzar esta tarea porque tiene dependencias sin finalizar: " + string.Join(", ", predecesorasPendientes);
                return false;
            }
        }

        // Regla 1: Una tarea padre no puede finalizar si tiene subtareas abiertas
        if (nuevoEstado == EstadoTarea.Finalizado && TieneSubtareasNoFinalizadas(tarea.Id))
        {
            mensaje = "No puedes finalizar una tarea padre mientras tenga subtareas no finalizadas";
            return false;
        }

        // Regla 2: Una subtarea no puede avanzar si su tarea padre est√° pendiente o bloqueada
        var tareaPadre = ObtenerTareaPadre(tarea);
        if (tareaPadre != null)
        {
            if (quiereAvanzar && (tareaPadre.Estado == EstadoTarea.Pendiente || tareaPadre.Estado == EstadoTarea.Bloqueado))
            {
                mensaje = "No puedes avanzar una subtarea si su tarea padre est√° pendiente o bloqueada";
                return false;
            }

            // Regla 3: Si la tarea padre est√° finalizada, sus subtareas deben permanecer finalizadas
            if (tareaPadre.Estado == EstadoTarea.Finalizado && nuevoEstado != EstadoTarea.Finalizado)
            {
                mensaje = "No puedes reabrir una subtarea si su tarea padre ya est√° finalizada";
                return false;
            }
        }

        return true;
    }

    private string GetEstadoTexto(EstadoTarea estado)
    {
        return estado switch
        {
            EstadoTarea.Finalizado => "Finalizado",
            EstadoTarea.EnCurso => "En Curso",
            EstadoTarea.Pendiente => "Pendiente",
            EstadoTarea.Bloqueado => "Bloqueado",
            _ => estado.ToString()
        };
    }

    private List<Tarea> ObtenerTareasCandidatasDependencia()
    {
        var idsExcluidos = new HashSet<int>();

        if (tareaEditando.Id > 0)
        {
            idsExcluidos.Add(tareaEditando.Id);

            foreach (var subtarea in ObtenerSubtareasDescendientes(tareaEditando.Id))
            {
                idsExcluidos.Add(subtarea.Id);
            }
        }

        return tareas
            .Where(t => !idsExcluidos.Contains(t.Id))
            .OrderBy(t => t.Nombre)
            .ToList();
    }
