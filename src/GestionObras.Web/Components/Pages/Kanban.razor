    private Tarea? tareaParaCompletar = null;
    private string observacionesFinalizacion = "";
    
    // Firmar tarea
    private bool mostrarModalFirmar = false;
    private Tarea? tareaParaFirmar = null;
    private string observacionesFirma = "";
    
    private void AbrirModalCompletarTarea(Tarea tarea)
    {
        tareaParaCompletar = tarea;
        observacionesFinalizacion = "";
        mostrarModalCompletarTarea = true;
        StateHasChanged();
    }
    
    private async Task CompletarTarea()
    {
        if (tareaParaCompletar != null)
        {
            if (!PuedeMoverSegunJerarquia(tareaParaCompletar, EstadoTarea.Finalizado, out var mensajeJerarquia))
            {
                await JS.InvokeVoidAsync("alert", mensajeJerarquia);
                return;
            }

            // Verificar si requiere firma conjunta
            if (tareaParaCompletar.RequiereFirmaConjunta)
            {
                if (!UsuarioEstaAsignadoATarea(tareaParaCompletar, usuarioActualId))
                {
                    await JS.InvokeVoidAsync("alert", "Solo un usuario asignado a la tarea puede completarla cuando requiere firma conjunta");
                    return;
                }

                if (!tareaParaCompletar.TodosHanFirmado())
                {
                    var pendientes = tareaParaCompletar.UsuariosAsignados
                        .Where(u => !string.IsNullOrWhiteSpace(u.Id) &&
                                    !tareaParaCompletar.Firmas.Any(f => f.UsuarioId == u.Id && f.Aprobada))
                        .Select(u => u.NombreCompleto)
                        .ToList();

                    await JS.InvokeVoidAsync("alert", 
                        $"Esta tarea requiere la firma de todos los usuarios asignados. " +
                        $"Firmas aprobadas: {tareaParaCompletar.Firmas.Count(f => f.Aprobada && tareaParaCompletar.UsuariosAsignados.Any(u => u.Id == f.UsuarioId))}/{tareaParaCompletar.UsuariosAsignados.Count}. " +
                        $"Pendientes: {(pendientes.Any() ? string.Join(", ", pendientes) : "Ninguno")}");
                    return;
                }
            }
            
            tareaParaCompletar.Estado = EstadoTarea.Finalizado;
            tareaParaCompletar.FechaFinalizacion = DateTime.Now;
            tareaParaCompletar.CompletadaPorId = usuarioActualId;
            tareaParaCompletar.ObservacionesFinalizacion = observacionesFinalizacion;
            
            DbContext.Update(tareaParaCompletar);
            await DbContext.SaveChangesAsync();
            await CargarDatos();
            
            CerrarModalCompletarTarea();
            await JS.InvokeVoidAsync("alert", "Tarea completada correctamente");
        }
    }
    
    private void CerrarModalCompletarTarea()
    {
        mostrarModalCompletarTarea = false;
        tareaParaCompletar = null;
        observacionesFinalizacion = "";
    }
    
    // Gesti√≥n de firmas
    private void AbrirModalFirmarTarea(Tarea tarea)
    {
        if (!tarea.RequiereFirmaConjunta)
        {
            JS.InvokeVoidAsync("alert", "Esta tarea no requiere firma conjunta");
            return;
        }

        if (tarea.Estado != EstadoTarea.EnCurso)
        {
            JS.InvokeVoidAsync("alert", "Solo se puede firmar una tarea que est√© en estado En Curso");
            return;
        }

        if (!UsuarioEstaAsignadoATarea(tarea, usuarioActualId))
        {
            JS.InvokeVoidAsync("alert", "Solo los usuarios asignados a la tarea pueden firmarla");
            return;
        }

        if (tarea.UsuarioHaFirmado(usuarioActualId ?? ""))
        {
            JS.InvokeVoidAsync("alert", "Ya has firmado esta tarea");
            return;
        }
        
        tareaParaFirmar = tarea;
        observacionesFirma = "";
        mostrarModalFirmar = true;
        StateHasChanged();
    }
    
    private async Task FirmarTarea(bool aprobada)
    {
        if (tareaParaFirmar != null && !string.IsNullOrWhiteSpace(usuarioActualId))
        {
            if (!tareaParaFirmar.RequiereFirmaConjunta)
            {
                await JS.InvokeVoidAsync("alert", "Esta tarea no requiere firma conjunta");
                CerrarModalFirmar();
                return;
            }

            if (tareaParaFirmar.Estado != EstadoTarea.EnCurso)
            {
                await JS.InvokeVoidAsync("alert", "Solo se puede firmar una tarea que est√© en estado En Curso");
                CerrarModalFirmar();
                return;
            }

            if (!UsuarioEstaAsignadoATarea(tareaParaFirmar, usuarioActualId))
            {
                await JS.InvokeVoidAsync("alert", "Solo los usuarios asignados a la tarea pueden firmarla");
                CerrarModalFirmar();
                return;
            }

            var firmaExistente = await DbContext.FirmasTareas
                .AsNoTracking()
                .FirstOrDefaultAsync(f => f.TareaId == tareaParaFirmar.Id && f.UsuarioId == usuarioActualId);

            if (firmaExistente != null)
            {
                await JS.InvokeVoidAsync("alert", "Ya has firmado esta tarea anteriormente");
                CerrarModalFirmar();
                await CargarDatos();
                return;
            }

            var firma = new FirmaTarea
            {
                TareaId = tareaParaFirmar.Id,
                UsuarioId = usuarioActualId,
                FechaFirma = DateTime.Now,
                Observaciones = observacionesFirma,
                Aprobada = aprobada,
                MotivoRechazo = null
            };
            
            try
            {
                DbContext.FirmasTareas.Add(firma);
                await DbContext.SaveChangesAsync();
                await CargarDatos();

                CerrarModalFirmar();

                var mensaje = aprobada ? "Tarea firmada correctamente" : "Tarea rechazada";
                await JS.InvokeVoidAsync("alert", mensaje);

                // Si se rechaza, bloquear la tarea
                if (!aprobada && tareaParaFirmar != null)
                {
                    tareaParaFirmar.Estado = EstadoTarea.Bloqueado;
                    var bloqueo = new BloqueoTarea
                    {
                        TareaId = tareaParaFirmar.Id,
                        Tipo = TipoBloqueo.Otro,
                        JustificacionTecnica = $"Rechazada por usuario {usuarioActualId}",
                        FechaBloqueo = DateTime.Now
                    };
                    DbContext.BloqueosTareas.Add(bloqueo);
                    DbContext.Update(tareaParaFirmar);
                    await DbContext.SaveChangesAsync();
                    await CargarDatos();
                }
            }
            catch (DbUpdateException)
            {
                await JS.InvokeVoidAsync("alert", "Ya existe una firma registrada para esta tarea y usuario");
                CerrarModalFirmar();
                await CargarDatos();
            }
        }
    }
    
    private void CerrarModalFirmar()
    {
        mostrarModalFirmar = false;
        tareaParaFirmar = null;
        observacionesFirma = "";
    }

