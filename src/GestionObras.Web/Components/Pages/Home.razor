@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Gestión de Obras</PageTitle>

@code {
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            // Redirigir según el rol del usuario
            if (user.IsInRole("Administrador"))
            {
                Navigation.NavigateTo("/admin/dashboard", true);
            }
            else if (user.IsInRole("JefeObra"))
            {
                Navigation.NavigateTo("/jefe-obra/dashboard", true);
            }
            else if (user.IsInRole("OficinaTecnica"))
            {
                Navigation.NavigateTo("/oficina-tecnica/dashboard", true);
            }
            else if (user.IsInRole("Operario") || user.IsInRole("OperarioObra") || user.IsInRole("OperarioOficinaT"))
            {
                Navigation.NavigateTo("/operario/dashboard", true);
            }
            else
            {
                // Usuario sin rol específico
                Navigation.NavigateTo("/admin/dashboard", true);
            }
        }
        else
        {
            Navigation.NavigateTo("/login", true);
        }
    }
}
