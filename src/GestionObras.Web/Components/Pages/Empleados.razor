    }

    private void AbrirModalEditar(Empleado empleado)
    {
        empleadoSeleccionado = new Empleado
        {
            Id = empleado.Id,
            Nombre = empleado.Nombre,
            Apellidos = empleado.Apellidos,
            DNI = empleado.DNI,
            Email = empleado.Email,
            Telefono = empleado.Telefono,
            FechaContratacion = empleado.FechaContratacion,
            Departamento = empleado.Departamento,
            Cargo = empleado.Cargo,
            Direccion = empleado.Direccion,
            Activo = empleado.Activo
        };
        mostrarModal = true;
        StateHasChanged();
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        empleadoSeleccionado = new();
    }

    private async Task GuardarEmpleado()
    {
        if (empleadoSeleccionado.Id == 0)
        {
            empleadoSeleccionado.Id = empleados.Max(e => e.Id) + 1;
            empleados.Add(empleadoSeleccionado);
        }
        else
        {
            var empleado = empleados.FirstOrDefault(e => e.Id == empleadoSeleccionado.Id);
            if (empleado != null)
            {
                empleado.Nombre = empleadoSeleccionado.Nombre;
                empleado.Apellidos = empleadoSeleccionado.Apellidos;
                empleado.DNI = empleadoSeleccionado.DNI;
                empleado.Email = empleadoSeleccionado.Email;
                empleado.Telefono = empleadoSeleccionado.Telefono;
                empleado.FechaContratacion = empleadoSeleccionado.FechaContratacion;
                empleado.Departamento = empleadoSeleccionado.Departamento;
                empleado.Cargo = empleadoSeleccionado.Cargo;
                empleado.Direccion = empleadoSeleccionado.Direccion;
                empleado.Activo = empleadoSeleccionado.Activo;
            }
        }
        CerrarModal();
        StateHasChanged();
    }

    private void ConfirmarEliminar(Empleado empleado)
    {
        empleadoAEliminar = empleado;
        mostrarModalEliminar = true;
        StateHasChanged();
    }

    private void CerrarModalEliminar()
    {
        mostrarModalEliminar = false;
        empleadoAEliminar = null;
    }

    private async Task EliminarEmpleado()
    {
        if (empleadoAEliminar != null)
        {
            empleados.Remove(empleadoAEliminar);
        }
        CerrarModalEliminar();
        StateHasChanged();
    }

    private void LimpiarFiltros()
    {
        filtroNombre = "";
        filtroEstado = "";
    }
