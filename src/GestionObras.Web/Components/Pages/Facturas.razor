}

@code {
    private List<Factura> facturas = new();
    private bool cargando = true;
    private bool mostrarModal = false;
    private bool mostrarModalEliminar = false;
    private Factura facturaSeleccionada = new();
    private Factura? facturaAEliminar;

    private string filtroNumero = "";
    private string filtroEstado = "";

    private IEnumerable<Factura> facturasFiltradas => facturas
        .Where(f => string.IsNullOrEmpty(filtroNumero) || 
                   f.NumeroFactura.Contains(filtroNumero, StringComparison.OrdinalIgnoreCase) ||
                   f.Concepto.Contains(filtroNumero, StringComparison.OrdinalIgnoreCase))
        .Where(f => string.IsNullOrEmpty(filtroEstado) || f.Estado.ToString() == filtroEstado);

    private IEnumerable<Factura> facturasPendientes => facturas.Where(f => f.Estado == EstadoFactura.Pendiente);
    private IEnumerable<Factura> facturasPagadas => facturas.Where(f => f.Estado == EstadoFactura.Pagada);
    private IEnumerable<Factura> facturasVencidas => facturas.Where(f => f.Estado == EstadoFactura.Vencida);

    protected override async Task OnInitializedAsync()
    {
        await CargarFacturas();
    }

    private async Task CargarFacturas()
    {
        cargando = true;
        await Task.Delay(500);

        facturas = new List<Factura>
        {
            new Factura 
            { 
                Id = 1, 
                NumeroFactura = "F-2024-001", 
                Concepto = "Materiales de construcci贸n",
                FechaEmision = new DateTime(2024, 1, 15),
                FechaVencimiento = new DateTime(2024, 2, 15),
                BaseImponible = 5000m,
                PorcentajeIVA = 21m,
                IVA = 1050m,
                ImporteTotal = 6050m,
                Estado = EstadoFactura.Pagada,
                NombreProyecto = "Edificio Residencial Centro",
                MetodoPago = "Transferencia",
                FechaPago = new DateTime(2024, 2, 10)
            },
            new Factura 
            { 
                Id = 2, 
                NumeroFactura = "F-2024-002", 
                Concepto = "Mano de obra - Enero 2024",
                FechaEmision = new DateTime(2024, 1, 31),
                FechaVencimiento = new DateTime(2024, 2, 28),
                BaseImponible = 12000m,
                PorcentajeIVA = 21m,
                IVA = 2520m,
                ImporteTotal = 14520m,
                Estado = EstadoFactura.Pendiente,
                NombreProyecto = "Rehabilitaci贸n Edificio Hist贸rico",
                MetodoPago = "Transferencia"
            },
            new Factura 
            { 
                Id = 3, 
                NumeroFactura = "F-2024-003", 
                Concepto = "Alquiler maquinaria pesada",
                FechaEmision = new DateTime(2024, 1, 1),
                FechaVencimiento = new DateTime(2024, 1, 31),
                BaseImponible = 3500m,
                PorcentajeIVA = 21m,
                IVA = 735m,
                ImporteTotal = 4235m,
                Estado = EstadoFactura.Vencida,
                NombreProyecto = "Nave Industrial Pol铆gono Norte",
                MetodoPago = "Transferencia"
            }
        };

        cargando = false;
    }

    private void AbrirModalNuevo()
    {
        facturaSeleccionada = new Factura 
        { 
            FechaEmision = DateTime.Today,
            FechaVencimiento = DateTime.Today.AddDays(30),
            Estado = EstadoFactura.Pendiente,
            PorcentajeIVA = 21m
        };
        mostrarModal = true;
    }

    private void AbrirModalEditar(Factura factura)
    {
        facturaSeleccionada = new Factura
        {
            Id = factura.Id,
            NumeroFactura = factura.NumeroFactura,
            Concepto = factura.Concepto,
            FechaEmision = factura.FechaEmision,
            FechaVencimiento = factura.FechaVencimiento,
            FechaPago = factura.FechaPago,
            BaseImponible = factura.BaseImponible,
            PorcentajeIVA = factura.PorcentajeIVA,
            IVA = factura.IVA,
            ImporteTotal = factura.ImporteTotal,
            Estado = factura.Estado,
            NombreProyecto = factura.NombreProyecto,
            MetodoPago = factura.MetodoPago,
            Observaciones = factura.Observaciones
        };
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        facturaSeleccionada = new();
    }

    private void CalcularTotales(ChangeEventArgs e)
    {
        facturaSeleccionada.IVA = facturaSeleccionada.BaseImponible * (facturaSeleccionada.PorcentajeIVA / 100);
        facturaSeleccionada.ImporteTotal = facturaSeleccionada.BaseImponible + facturaSeleccionada.IVA;
    }

    private async Task GuardarFactura()
    {
        // Recalcular antes de guardar
        facturaSeleccionada.IVA = facturaSeleccionada.BaseImponible * (facturaSeleccionada.PorcentajeIVA / 100);
        facturaSeleccionada.ImporteTotal = facturaSeleccionada.BaseImponible + facturaSeleccionada.IVA;
        facturaSeleccionada.Importe = facturaSeleccionada.ImporteTotal;

        if (facturaSeleccionada.Id == 0)
        {
            facturaSeleccionada.Id = facturas.Any() ? facturas.Max(f => f.Id) + 1 : 1;
            facturas.Add(facturaSeleccionada);
        }
        else
        {
            var factura = facturas.FirstOrDefault(f => f.Id == facturaSeleccionada.Id);
            if (factura != null)
            {
                factura.NumeroFactura = facturaSeleccionada.NumeroFactura;
                factura.Concepto = facturaSeleccionada.Concepto;
                factura.FechaEmision = facturaSeleccionada.FechaEmision;
                factura.FechaVencimiento = facturaSeleccionada.FechaVencimiento;
                factura.FechaPago = facturaSeleccionada.FechaPago;
                factura.BaseImponible = facturaSeleccionada.BaseImponible;
                factura.PorcentajeIVA = facturaSeleccionada.PorcentajeIVA;
                factura.IVA = facturaSeleccionada.IVA;
                factura.ImporteTotal = facturaSeleccionada.ImporteTotal;
                factura.Importe = facturaSeleccionada.ImporteTotal;
                factura.Estado = facturaSeleccionada.Estado;
                factura.NombreProyecto = facturaSeleccionada.NombreProyecto;
                factura.MetodoPago = facturaSeleccionada.MetodoPago;
                factura.Observaciones = facturaSeleccionada.Observaciones;
            }
        }
        CerrarModal();
        StateHasChanged();
    }

    private void ConfirmarEliminar(Factura factura)
    {
        facturaAEliminar = factura;
        mostrarModalEliminar = true;
    }

    private void CerrarModalEliminar()
    {
        mostrarModalEliminar = false;
        facturaAEliminar = null;
    }

    private async Task EliminarFactura()
    {
        if (facturaAEliminar != null)
        {
            facturas.Remove(facturaAEliminar);
        }
        CerrarModalEliminar();
        StateHasChanged();
    }

    private void LimpiarFiltros()
    {
        filtroNumero = "";
        filtroEstado = "";
    }
}
